<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="268.0" prefWidth="441.0" stylesheets="@my.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.inferface_distribution.EditDutyController">
    <children>
        <VBox alignment="TOP_LEFT" spacing="15.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Редагування наряду" wrapText="true" />
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefWidth="80" text="Курсант:" wrapText="true" />
                <ComboBox fx:id="cadetSelector" prefWidth="200" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefWidth="80" text="День:" wrapText="true" />
                <Spinner fx:id="daySpinner" prefWidth="100" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefWidth="80" text="Місце:" wrapText="true" />
                <ComboBox fx:id="placeSelector" prefWidth="200" />
            </HBox>
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="saveBtn" minHeight="30.0" onAction="#onSave" prefHeight="32.0" prefWidth="103.0" text="Зберегти" />
                <Button fx:id="deleteBtn" onAction="#onDelete" text="Видалити" />
                <Button fx:id="swapBtn" onAction="#onSwap" text="Поміняти місцями" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
