<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="480.0" styleClass="root" stylesheets="@my.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.inferface_distribution.EditDutyController">
    <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <Label text="Редагування наряду" styleClass="header-label" />
        <VBox spacing="10" styleClass="info-box">

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Курсант:" prefWidth="100" styleClass="label" />
                <ComboBox fx:id="cadetSelector" prefWidth="240" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="День:" prefWidth="100" styleClass="label" />
                <Spinner fx:id="daySpinner" prefWidth="120" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Місце:" prefWidth="100" styleClass="label" />
                <ComboBox fx:id="placeSelector" prefWidth="240" />
            </HBox>
        </VBox>

        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
            <Button fx:id="saveBtn" text="Зберегти" onAction="#onSave" styleClass="button main-button" />
            <Button fx:id="deleteBtn" text="Видалити" onAction="#onDelete" styleClass="button danger-button" />
            <Button fx:id="swapBtn" text="Поміняти місцями" onAction="#onSwap" styleClass="button info-button" />
        </HBox>
    </VBox>
</AnchorPane>
