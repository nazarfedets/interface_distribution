<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@my.css" prefHeight="800.0" prefWidth="1540.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.inferface_distribution.ViewRequestVocatuonController">
    <center>
        <TableView fx:id="tableView" blendMode="MULTIPLY" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="pibColumn" text="ПІБ" prefWidth="150"/>
                <TableColumn fx:id="reasonColumn" text="Причина" prefWidth="200"/>
                <TableColumn fx:id="dateColumn" text="Дата" prefWidth="100"/>
                <TableColumn fx:id="typeColumn" text="Тип" prefWidth="150"/>
                <TableColumn fx:id="statusColumn" text="Статус" prefWidth="100"/>
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" />
            </BorderPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

    <right>
        <VBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="approveBtn" text="Підтвердити" onAction="#approveRequest" styleClass="main-button"/>
                <Button fx:id="rejectBtn" text="Відхилити" onAction="#rejectRequest" styleClass="danger-button"/>
                <Button fx:id="btnCancel" text="Назад" onAction="#cancelButton" styleClass="secondary-button"/>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" right="20.0" />
            </BorderPane.margin>
        </VBox>
    </right>

    <top>
        <Label text="Таблиця Заявок" alignment="CENTER" textAlignment="CENTER" styleClass="header-label" BorderPane.alignment="CENTER">
            <font>
                <Font size="18.0" />
            </font>
            <BorderPane.margin>
                <Insets top="20.0" />
            </BorderPane.margin>
        </Label>
    </top>
</BorderPane>
