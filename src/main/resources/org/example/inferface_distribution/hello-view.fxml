<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.Double?>
<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.inferface_distribution.HelloController" stylesheets="@my.css" minHeight="500.0" minWidth="600.0">
    <children>
        <StackPane fx:id="stackPane" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <ImageView fx:id="backgroundImage" preserveRatio="true" opacity="0.25" StackPane.alignment="CENTER">
                    <image>
                        <Image url="@../../../images/bg1.jpg" />
                    </image>
                    <fitWidth>
                        <Double fx:value="0.0" />
                    </fitWidth>
                    <fitHeight>
                        <Double fx:value="0.0" />
                    </fitHeight>
                </ImageView>

            </children>
        </StackPane>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <TextField fx:id="loginField" promptText="Логін" maxWidth="300.0"/>
                <PasswordField fx:id="passwordField" promptText="Пароль" maxWidth="300.0"/>
                <CheckBox text="Запам'ятати мене"/>
                <Label fx:id="errorLabel" textFill="red"/>
                <Button fx:id="loginButton" text="Увійти"/>
            </children>
        </VBox>
    </children>
</AnchorPane>

