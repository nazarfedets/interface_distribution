<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="800.0" prefWidth="1440.0" stylesheets="@my.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.inferface_distribution.AdminviewController">

   <children>
      <HBox alignment="CENTER" layoutX="56.0" layoutY="80.0" prefHeight="54.0" prefWidth="862.0" spacing="20.0">
         <children>
            <Button fx:id="btnCZ11" text="ЦЗ-11" styleClass="secondary-button small-button"/>
            <Button fx:id="btnCZ12" text="ЦЗ-12" styleClass="secondary-button small-button"/>
            <Button fx:id="btnCZ21" text="ЦЗ-21" styleClass="secondary-button small-button"/>
            <Button fx:id="btnCZ31" text="ЦЗ-31" styleClass="secondary-button small-button"/>
         </children>
      </HBox>
      <TableView fx:id="userTable" layoutX="56.0" layoutY="150.0" prefHeight="620.0" prefWidth="862.0" styleClass="info-box">
         <columns>
            <TableColumn fx:id="pibColumn" prefWidth="200.0" text="ПІБ"/>
            <TableColumn fx:id="phoneColumn" prefWidth="200.0" text="Номер телефону"/>
            <TableColumn fx:id="groupColumn" prefWidth="200.0" text="Спеціальність"/>
            <TableColumn fx:id="totalDutyColumn" prefWidth="150.0" text="Всього нарядів" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
         </columnResizePolicy>
      </TableView>
      <VBox alignment="TOP_CENTER" layoutX="972.0" layoutY="180.0" prefHeight="551.0" prefWidth="466.0" spacing="25.0">
         <children>
            <Button fx:id="btnOpenDutyTable" prefHeight="40.0" prefWidth="360.0" styleClass="main-button" text="Переглянути наряди" onAction="#openDutyTable"/>
            <Button fx:id="btnOpenViewRequest" prefHeight="40.0" prefWidth="360.0" styleClass="info-button" text="Переглянути заявки на звільнення / відпустку" onAction="#openViewRequest"/>
         </children>
      </VBox>

      <HBox alignment="CENTER_RIGHT" layoutX="1150.0" layoutY="30.0" prefWidth="250.0" spacing="15.0">
         <children>
            <Label fx:id="userLabel" text="Адміністратор" styleClass="user-info-label"/>
            <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
               <image>
                  <Image url="@../../../images/bg2.jpg"/>
               </image>
            </ImageView>
         </children>
      </HBox>

   </children>
</AnchorPane>
