<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="220.0" prefWidth="560.0" style="-fx-background-color: #F0F4F8;" stylesheets="@my.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.inferface_distribution.ChangeDutyController">
    <children>
        <VBox alignment="CENTER" spacing="20.0">
            <children>
                <HBox alignment="CENTER" spacing="50.0">
                    <children>
                        <TextField fx:id="textFieldchange" prefHeight="26.0" prefWidth="330.0" promptText="Впишіть причину" style="-fx-background-radius: 15;" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnSend" maxWidth="100" style="-fx-background-radius: 15; -fx-background-color: #719FD4;" text="Надіслати" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" maxWidth="Infinity" spacing="50.0">
                    <children>
                        <ChoiceBox prefHeight="26.0" prefWidth="401.0" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnCancel" maxWidth="114.0" minHeight="30.0" onAction="#cancelButton" prefHeight="32.0" prefWidth="112.0" style="-fx-background-radius: 15; -fx-background-color: #719FD4;" text="Скасувати" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</StackPane>
