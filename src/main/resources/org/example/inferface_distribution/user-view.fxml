<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="334.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom right, #eef3fb, #dbe5f4);" stylesheets="@my.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.inferface_distribution.UserviewController">
   <Label layoutX="80.0" layoutY="40.0"
          styleClass="header-label"
          text="Меню користувача" />

   <VBox layoutX="80.0" layoutY="100.0" prefWidth="400.0" spacing="15"
         styleClass="info-box">

      <HBox spacing="15">
         <Label text="ПІП:" />
         <Label fx:id="lblName" />
      </HBox>

      <HBox spacing="15">
         <Label text="Група:" />
         <Label fx:id="lblGroup" />
      </HBox>

      <HBox spacing="15">
         <Label text="Курс:" />
         <Label fx:id="lblCourse" />
      </HBox>

      <HBox spacing="15">
         <Label text="Телефон:" />
         <Label fx:id="lblPhone" />
      </HBox>
   </VBox>

   <VBox alignment="CENTER" layoutX="603.0" layoutY="100.0" spacing="30">
      <Button fx:id="btnopenDutyView" onAction="#openUserView" prefWidth="350.0" text="Переглянути наряди" styleClass="main-button" />
      <Button fx:id="requestVocation" onAction="#openRequestWindows" prefWidth="350.0" text="Подати заявку на звільнення / відпустку" styleClass="success-button" />
      <Button fx:id="btnchangeDuty" onAction="#openChangeDutyWindow" prefWidth="350.0" text="Подати заявку на змінення наряду" styleClass="warning-button" />
   </VBox>

</AnchorPane>
