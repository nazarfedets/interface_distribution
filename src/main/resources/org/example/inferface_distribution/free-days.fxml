<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="226.0" prefWidth="714.0" styleClass="root-pane" stylesheets="@my.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.inferface_distribution.FreeDaysController">

   <children>

      <HBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

         <ComboBox fx:id="comboBoxCursant" prefWidth="400" promptText="Оберіть курсанта" styleClass="combo-box" />
         <Button fx:id="addBtn" onAction="#addFreeDays" styleClass="success-button" text="Додати" />
      </HBox>
      <HBox alignment="CENTER" layoutX="42.4" prefHeight="23.0" prefWidth="408.0" spacing="20" AnchorPane.leftAnchor="42.0" AnchorPane.rightAnchor="264.0" AnchorPane.topAnchor="100">

         <DatePicker fx:id="startDatePicker" prefWidth="180" promptText="Від" styleClass="input-field" />

         <DatePicker fx:id="endDatePicker" prefWidth="180" promptText="До" styleClass="input-field" />
      </HBox>

      <HBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

         <ChoiceBox fx:id="reasonChoiceBox" prefWidth="400" styleClass="choice-box" />

         <Button fx:id="cancelBtn" onAction="#cancelButton" styleClass="secondary-button" text="Скасувати" />
      </HBox>
   </children>
</AnchorPane>
